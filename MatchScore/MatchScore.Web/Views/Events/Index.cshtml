@model EventIndexVM;

@{
    this.ViewData["Title"] = "Events Index";
    this.ViewData["EventsActive"] = "active";
    this.ViewData["PageTitle"] = "Events";
    this.ViewData["PageSubtitle"] = "List of all events";
}

<div class="site-section">
    <div class="container">
        @*Search Box*@
        <div class="search-create-menu">
            <form asp-controller="Events" asp-action="Index" method="get">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Search
                    </button>
                    <menu class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><input class="text-input" type="hidden" name="SortBy" value="title" /></li>
                        <li>Title<input class="text-input" type="text" name="Title" /></li>
                        <li><input type="submit" value="Search" class="btn btn-primary" /></li>
                    </menu>
                </div>
            </form>
        </div>
        <table class="table custom-table table-dark">
            @*Header cells*@
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="title"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("title"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">Event Title</a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="eventtype"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("eventtype"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">Event Type</a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="startdate"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("startdate"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">Start Date</a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="enddate"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("enddate"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">End Date</a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="isteamevent"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("isteamevent"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">Competition</a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="city"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("city"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">City</a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="country"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("country"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">Country</a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="champion"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("champion"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">Champion</a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Events"
                           asp-action="Index"
                           asp-route-SortBy="director"
                           asp-route-SortOrder="@{
                                                if(this.ViewData.ContainsKey("SortBy"))
                                                {
                                                    if(this.ViewData["SortBy"] != null)
                                                    {
                                                        if(this.ViewData["SortBy"].Equals("director"))
                                                        {
                                                                    @this.ViewData["SortOrder"]
                                                        }
                                                    }
                                                }
                            }" asp-route-PaginationSortOrder="@this.ViewData["SortOrder"]"
                           asp-route-IsHeader="true"
                           class="text-white">Director</a>
                    </th>
                    @if (User.Identity.IsAuthenticated && !User.Claims.FirstOrDefault(c => c.Type.Equals("Role")).Value.Equals("User"))
                    {
                        <th scope="col">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in this.Model.Events)
                {
                    <tr>
                        @{
                            var rowNumber = this.Model.Events.IndexOf(ev) + 1;
                        }
                        <th scope="row">@rowNumber</th>
                        <td>
                            <a class="table-text" asp-controller="Events" asp-action="Details" asp-route-eventId="@ev.EventId">@ev.Title</a>
                        </td>
                        <td>
                            @if (ev.EventType.Equals(EventTypes.SingleMatch))
                            {
                                <div>Single match</div>
                            }
                            else
                            {
                                @ev.EventType.ToString()
                            }
                        </td>
                        <td>@ev.StartDate.ToString(Messages.ShortDateDisplay)</td>
                        <td>@ev.EndDate.ToString(Messages.ShortDateDisplay)</td>
                        <td>
                            @{
                                if (@ev.IsTeamEvent)
                                {
                                    <div>Team</div>
                                }
                                else
                                {
                                    <div>Individual</div>
                                }
                            }
                        </td>
                        <td>@ev.City</td>
                        <td>@ev.Country</td>
                        <td>
                            @{
                                if (@ev.Champion != null)
                                {
                                    <a class="table-text" asp-controller="Players" asp-action="Details" asp-route-id="@ev.ChampionId">@ev.Champion</a>
                                }
                                else
                                {
                                    if (ev.HasMatchesWithScores)
                                    {
                                        <div class="badge badge-warning">Ongoing</div>
                                    }
                                    else
                                    {
                                        <div class="badge badge-info">Not Started</div>
                                    }
                                }
                            }
                        </td>
                        <td>
                            <a class="table-text" asp-controller="Users" asp-action="Details" asp-route-userId="@ev.DirectorId">@ev.Director</a>
                        </td>
                        @if (User.Identity.IsAuthenticated && !ev.IsCompleted)
                        {
                            <td>
                                @if (User.Claims.FirstOrDefault(c => c.Type.Equals("Role")).Value.Equals("Admin"))
                                {
                                    <a class="btn btn-warning btn-sm" asp-controller="Events" asp-action="Edit" asp-route-eventId="@ev.EventId">Edit</a>
                                    <a class="btn btn-warning btn-sm" asp-controller="Events" asp-action="Delete" asp-route-eventId="@ev.EventId">Delete</a>
                                }
                                else if (User.Claims.FirstOrDefault(c => c.Type.Equals("Username")).Value.Equals(ev.Director))
                                {
                                    <a class="btn btn-warning btn-sm" asp-controller="Events" asp-action="Edit" asp-route-eventId="@ev.EventId">Edit</a>
                                    <a class="btn btn-warning btn-sm" asp-controller="Events" asp-action="Delete" asp-route-eventId="@ev.EventId">Delete</a>
                                }
                        </td>
                        }
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@*Pagination buttons*@
@{
    string prevButtonState = !this.Model.HasPrevPage ? "disabled" : "";
    string nextButtonState = !this.Model.HasNextPage ? "disabled" : "";
}

<div class="btn-pagination text-center">
    <a class="btn btn-primary @prevButtonState"
       asp-controller="Events"
       asp-action="Index"
       asp-route-SortBy="@this.ViewData["SortBy"]"
       asp-route-SortOrder="@this.ViewData["PaginationSortOrder"]"
       asp-route-PaginationSortOrder="@this.ViewData["PaginationSortOrder"]"
       asp-route-CurrentPage="@(this.Model.CurrentPage - 1)">Prev</a>
    <a class="btn btn-primary @nextButtonState"
       asp-controller="Events"
       asp-action="Index"
       asp-route-SortBy="@this.ViewData["SortBy"]"
       asp-route-SortOrder="@this.ViewData["PaginationSortOrder"]"
       asp-route-PaginationSortOrder="@this.ViewData["PaginationSortOrder"]"
       asp-route-CurrentPage="@(this.Model.CurrentPage + 1)">Next</a>
</div>
