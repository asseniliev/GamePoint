@model UserLoginVM;

@{
    this.ViewData["Title"] = "Login page";
    this.ViewData["LoginActive"] = "active";
    this.ViewData["PageTitle"] = "Login";
    this.ViewData["PageSubtitle"] = "Login to your account";
}

<div class="site-section">
    <div class="container custom-container">
        <form class="p-5 bg-dark custom-form" asp-controller="Users" asp-action="Login" method="post">
            <div class="form-group input-icons">
                <label><i class="fa-solid fa-user icon"></i>Username</label>
                <input class="form-control input-field" asp-for="Username" type="text" placeholder="Enter username" required autofocus />
                <br />
                <span class="red" type="hidden" asp-validation-for="Username"></span>
            </div>
            <div class="form-group input-icons">
                <label><i class="fa-solid fa-lock icon"></i>Password</label>
                <input class="form-control input-field" asp-for="Password" type="password" placeholder="Enter password" required />
                <span class="red" type="hidden" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary py-3 px-4 text-white" type="submit" value="Login" />
            </div>
        </form>
    </div>
</div>
