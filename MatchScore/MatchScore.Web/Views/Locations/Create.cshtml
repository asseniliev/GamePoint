@model MatchScore.Web.ViewModels.LocationViewModels.LocationCreateVM
@{
    this.ViewData["Title"] = "Create Location";
    var countries = ViewData["Countries"] as SelectList;
}

<div class="site-section">
    <div class="form-container">
        <form class="p-5 bg-dark" asp-controller="Locations" asp-action="Create" method="post">

            <div class="col-6 title-section">
                <h2 class="heading">Create Location</h2>
            </div>

            <div class="form-group mb-2rem">
                <label asp-for="Country">Country</label><br />
                <select class="custom-select" asp-for="Country" asp-items="@countries"></select>
            </div>

            <div class="form-group mb-0 d-flex flex-column">
                <label asp-for="City"></label>
                <input asp-for="City" type="text" />
            </div>

            <div class="form-group mt-5">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>

        </form>

        <input type="button" value="Back" class="btn btn-secondary mt-4 ml-5" onclick="location.href='@Url.Action("Create", "Events")'" />
    </div>
</div>

